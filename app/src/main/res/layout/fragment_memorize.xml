<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".ui.dashboard.MemorizeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bannerMemorize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="170dp"
                android:text="This Section will help you memorize bangla grammar"
                android:textStyle="bold"
                android:textSize="35sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                />

            <Button
                android:id="@+id/mBtn100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="Beginner 1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/mBtn101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="Beginner 2"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/mBtn102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="Beginner 3"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>